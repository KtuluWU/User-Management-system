    {% endif %}
    <style>
        .centered_container {
            position: absolute;
            top: 60%;
            left: 50%;
            -moz-transform: translateX(-50%) translateY(-50%);
            -webkit-transform: translateX(-50%) translateY(-50%);
            transform: translateX(-50%) translateY(-50%);
        }
    </style>
{% endblock %}

{% block sidebar %}
    {% set tab_menu_index, tab_menu_profile, tab_menu_source, tab_admin_users, tab_admin_sellers, tab_admin_admins, tab_admin_products, tab_admin_histo, nav_menu, nav_admin = "active", "", "", "", "", "", "", "", "active", "" %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12">
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i
                                        class="fa fa-arrow-left"></i></a>{{ 'index_page.title'|trans }}</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="icon-home"></i></a></li>
                            <li class="breadcrumb-item active">{{ 'index_page.title'|trans }}</li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-4 col-sm-12 text-right">
                        <div class="bh_chart hidden-xs">
                            <div class="float-left m-r-15">
                                <small>Visitors</small>
                                <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                            </div>
                            <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Visits</small>
                                <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                            </div>
                            <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Chats</small>
                                <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                            </div>
                            <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                {% block main_body %}
                    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
                        {% include 'index/admin_index.html.twig' %}
                    {% elseif is_granted('ROLE_SELLER') %}
                        {% include 'index/seller_index.html.twig' %}
                    {% elseif is_granted('ROLE_USER') %}
                        {% include 'index/user_index.html.twig' %}
                    {% endif %}
                {% endblock %}
            </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/toastr/toastr.js') }}"></script>
    <script src="{{ asset('bundles_js/knob.bundle.js') }}"></script>
    <script src="{{ asset('vendor/slick/slick.min.js') }}"></script>
    <script src="{{ asset('vendor/sweetalert/sweetalert.min.js') }}"></script>
    <script src="{{ asset('bundles_js/chartist.bundle.js') }}"></script>
    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
    <script src="{{ asset('bundles_js/datatablescripts.bundle.js') }}"></script>
    <script src="{{ asset('vendor/jquery-datatable/buttons/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-datatable/buttons/buttons.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-datatable/buttons/buttons.colVis.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-datatable/buttons/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-datatable/buttons/buttons.print.min.js') }}"></script>
    <script src="{{ asset('js/pages/tables/jquery-datatable.js') }}"></script>
    {% elseif is_granted('ROLE_SELLER') %}
        <script src="{{ asset('js/tools.js') }}"></script>
        <script src="{{ asset('js/external/moment.min.js') }}"></script>
        <script src="{{ asset('vendor/pagination/jquery.simplePagination.js') }}"></script>
        <script>
            function insert_records_1(records, record_table){
                i = 0;
                for (i in records){
                    let row = record_table.find('.copy_source').clone().removeAttr('class style');
                    let columns = row.children('td');
                    columns.eq(0).html( '<a href="/user/show/'+ records[i]['user_id']+ '&user">' + records[i]['lastname'] + ' ' + records[i]['firstname']+ '</a>');  // full_name
                    columns.eq(1).text(records[i]['sex'] === '1' ? "{{ 'user_infos.sex.1'|trans }}" : "{{ 'user_infos.sex.0'|trans }}");  // sex
                    columns.eq(2).text(records[i]['user_id']); // userid
                    columns.eq(3).text(records[i]['phone']); // phone
                    columns.eq(4).text(records[i]['wechat']); // wechat
                    columns.eq(5).text(records[i]['address']); // address
                    columns.eq(6).text(translate('region.'+records[i]['region'])); // user_region
                    columns.eq(7).text(moment(new Date(records[i]['date_register'])).format('YYYY-MM-DD')); // date_register
                    row.appendTo(record_table.find('tbody'));
                }
            }

            function insert_records_2(records, record_table){
                i = 0;
                for (i in records){
                    let row = record_table.find('.copy_source').clone().removeAttr('class style');
                    let columns = row.children('td');
                    columns.eq(0).html( '<a href="/user/show/'+ records[i]['user_id']+ '&user">' + records[i]['lastname'] + ' ' + records[i]['firstname']+ '</a>');  // full_name
                    columns.eq(1).text(records[i]['sex'] === '1' ? "{{ 'user_infos.sex.1'|trans }}" : "{{ 'user_infos.sex.0'|trans }}");  // sex
                    columns.eq(2).text(records[i]['user_id']); // userid
                    columns.eq(3).text(records[i]['phone']); // phone
                    columns.eq(4).text(records[i]['wechat']); // wechat
                    columns.eq(5).text(records[i]['address']); // address
                    columns.eq(6).text(moment(new Date(records[i]['date_register'])).format('YYYY-MM-DD')); // date_register
                    row.appendTo(record_table.find('tbody'));
                }
            }

        $(document).ready(function () {
            let table_name = 'User';
            let page_number = "1";
            let sort_field = "lastname";
            let sort_order = null;
            let count = "10";
            let where_clause_1 = "user_id LIKE '1%' AND region = '{{ seller.region }}' AND responsible_id IS NULL";
            let where_clause_2 = "user_id LIKE '1%' AND responsible_id = {{ seller.user_id }}";

            $('#record_table_1').renderTable(table_name, page_number, sort_field, sort_order, count, where_clause_1, insert_records_1);

            $('#record_table_2').renderTable(table_name, page_number, sort_field, sort_order, count, where_clause_2, insert_records_2);

            $(document).on('click', '.engage', function (e) {
                let user_id = $('td:nth-child(3)', $(e.target).parents('tr')).text();
                let user_name = $('td:nth-child(1)', $(e.target).parents('tr')).text();
                swal({
                    title: "确定负责这个用户吗？",
                    text: "用户姓名："+user_name,
                    type: "info",
                    showCancelButton: true,
                    confirmButtonColor: "#17a2b8",
                    confirmButtonText: "负责",
                    cancelButtonText: "取消"
                }, function() {
                    $.ajax({
                        url: '/service/attach_user/action=engage&user_id='+user_id+'&seller_id='+{{ seller.user_id }},
                        type: 'POST',
                    });
                    location.reload();
                });
            });

            $(document).on('click', '.dismiss', function (e) {
                let user_id = $('td:nth-child(3)', $(e.target).parents('tr')).text();
                let user_name = $('td:nth-child(1)', $(e.target).parents('tr')).text();
                swal({
                    title: "确定解除这个用户吗？",
                    text: "用户姓名："+user_name,
                    type: "info",
                    showCancelButton: true,
                    confirmButtonColor: "#b8071d",
                    confirmButtonText: "解除",
                    cancelButtonText: "取消"
                }, function() {
                    $.ajax({
                        url: '/service/attach_user/action=dismiss&user_id='+user_id+'&seller_id='+{{ seller.user_id }},
                        type: 'POST',
                    });
                    location.reload();
                });
            });
        });
        </script>


    {% elseif is_granted('ROLE_USER') %}
        <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        <script src="{{ asset('vendor/slider/js/imagesloaded.js') }}"></script>
        <script src="{{ asset('vendor/slider/js/smartresize.js') }}"></script>
        <script src="{{ asset('vendor/slider/src/jquery.skidder.js') }}"></script>
        <script>
            $(document).ready(function(){
              $('#hot_product').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 4000,
              });
            });
            $('.slideshow').each( function() {
                var $slideshow = $(this);
                $slideshow.imagesLoaded( function() {
                    $slideshow.skidder({
                        slideClass    : '.slide',
                        animationType : 'css',
                        scaleSlides   : true,
                        maxWidth : 180,
                        maxHeight: 250,
                        paging        : true,
                        autoPaging    : true,
                        pagingWrapper : ".skidder-pager",
                        pagingElement : ".skidder-pager-dot",
                        swiping       : true,
                        leftaligned   : false,
                        cycle         : true,
                        jumpback      : false,
                        speed         : 400,
                        autoplay      : true,
                        autoplayResume: false,
                        interval      : 4000,
                        transition    : "slide",
                        afterSliding  : function() {},
                        afterInit     : function() {}
                    });
                });
            });
        </script>
    {% endif %}



{% endblock %}