                let columns = row.children('td');
                columns.eq(0).html('<a href="/tracking/'+records[i]['tracking_id']+'&tracking" >'+ records[i]['tracking_id'] +'</a>');
                columns.eq(1).html('<a href="/product/show/'+records[i]['product_id']+'&product" >'+ records[i]['product_id'] +'</a>');
                columns.eq(2).text(moment(new Date(records[i]['production_date'])).format('YYYY-MM-DD'));
                columns.eq(3).html('<a href="/tracking/batch_show/'+records[i]['batch_id']+'&batch_show" >'+ records[i]['batch_id'] +'</a>');
