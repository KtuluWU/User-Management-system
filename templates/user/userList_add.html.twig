{% extends 'layout.html.twig' %}
{% trans_default_domain 'ums' %}

{% block sidebar %}
    {% set tab_menu_index, tab_menu_profile, tab_menu_histo, tab_menu_source, tab_admin_users, tab_admin_sellers, tab_admin_admins, tab_admin_products, nav_menu, nav_admin = "", "", "", "", "", "", "", "", "", "active" %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
<div id="main-content" class="profilepage_2">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i
                                    class="fa fa-arrow-left"></i></a>{{ 'userList_pages.add_seller_admin'|trans }}</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item active">{{ 'userList_pages.add_seller_admin'|trans }}</li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-12 text-right">
                    <div class="bh_chart hidden-xs">
                        <div class="float-left m-r-15">
                            <small>Visitors</small>
                            <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                        </div>
                        <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
                    </div>
                    <div class="bh_chart hidden-sm">
                        <div class="float-left m-r-15">
                            <small>Visits</small>
                            <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                        </div>
                        <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
                    </div>
                    <div class="bh_chart hidden-sm">
                        <div class="float-left m-r-15">
                            <small>Chats</small>
                            <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                        </div>
                        <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8 col-md-12 m-auto">
            <div class="card">
                <div class="header">
                    <h2>{{ 'userList_pages.add_seller_admin'|trans }}</h2>
                </div>
                <div class="body">
                    {{ form_start(form) }}
                    <small class="text-muted">{{ form_label(form.username) }} *</small>
                    <p>{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.firstname) }}</small>
                    <p>{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.lastname) }} *</small>
                    <p>{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.sex) }} *</small>
                    <p>{{ form_widget(form.sex) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.email) }} *</small>
                    <p>{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">
                        <label for="userList_add_id_card" class="required">{{ 'userList_pages.id_card'|trans }} *</label>
                    </small>
                    <p>
                        <input type="text" id="userList_add_id_card" name="userList_add_id_card" required="required" placeholder="{{ 'userList_pages.id_card'|trans }}" class="form-control">
                    </p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.date_birth) }}</small>
                    <p>{{ form_widget(form.date_birth) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.phone) }} *</small>
                    <p>{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.wechat) }}</small>
                    <p>{{ form_widget(form.wechat, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.address) }} *</small>
                    <p>{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.region) }} *</small>
                    <p>{{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}</p>
                    <hr>
                    <small class="text-muted">
                        <label for="userList_add_plain_pwd" class="required">{{ 'userList_pages.plain_pwd'|trans }} *</label>
                    </small>
                        <p>
                            <input type="text" id="userList_add_plain_pwd" name="userList_add_plain_pwd" required="required" placeholder="{{ 'userList_pages.plain_pwd'|trans }}" class="form-control">
                        </p>
                    <hr>
                    <small class="text-muted">{{ form_label(form.enabled) }} *</small>
                    <p>{{ form_widget(form.enabled) }}</p>
                    <hr>
                    <small class="text-muted">
                        <label for="userList_add_roles" class="required">{{ 'userList_pages.roles'|trans }} *</label>
                    </small>
                        <p>
                            <select id="userList_add_roles" name="userList_add_roles">
                                <option value="ROLE_SELLER">{{ 'roles.ROLE_SELLER'|trans }}</option>
                                <option value="ROLE_ADMIN">{{ 'roles.ROLE_ADMIN'|trans }}</option>
                            </select>
                        </p>
                    <hr>

                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="{{ 'profile_page.btn'|trans }}">&nbsp;&nbsp;
                        <a href="/userList/{{ page|lower }}" class="btn btn-default">{{ 'profile_page.cancel'|trans }}</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
